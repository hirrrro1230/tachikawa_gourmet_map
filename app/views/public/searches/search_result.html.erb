<h3>検索結果</h3>

<table class="table table-hover table-inverse">
  <!--検索対象モデルがRestaurantの時 -->
  <% if @range == "Restaurant" %>
    <tbody>
      <% @restaurants.each do |restaurant| %>
        <tr>
          <td><%= restaurant.name %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <!--検索対象モデルがRestaurantではない時(= 検索対象モデルがGenreの時) -->
    <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.restaurant.name %></td>
          
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>