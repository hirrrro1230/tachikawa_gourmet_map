<div class="container">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
          <h3>検索結果</h3>
          
          <table class="table table-hover table-inverse">
            <!--検索対象モデルがRestaurantの時 -->
            <% if @range == "店舗" %>
              <tbody>
                <% @restaurants.each do |restaurant| %>
                  <tr>
                    <td>
                      <%= link_to restaurant_path(restaurant.id) do %>
                      <%= restaurant.name %>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            <% else %>
              <!--検索対象モデルがRestaurantではない時(= 検索対象モデルがGenreの時) -->
              <tbody>
                <% @genres.each do |genre| %>
                  <tr>
                    <td><%= genre.restaurants.name %></td>
                    
                  </tr>
                <% end %>
              </tbody>
            <% end %>
          </table>
        </div>
        <% if customer_signed_in? %>
        <div class="col-md-4">
            
            <%= render 'public/searches/search', searches: @searches %>
        </div>
    <% end %>
    </div>
</div>