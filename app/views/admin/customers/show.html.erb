<div class="container">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">                
            <h3><%= @customer.name %>さんの会員詳細</h3>
            <table class="table table-borderless">
                <tbody>
                    <tr>
                        <td>会員ID</td>
                        <td><%= @customer.id %></td>
                    </tr>
                    <tr>
                        <td>ユーザ名</td>
                        <td><%= @customer.name %></td>
                    </tr>
                        <td>メールアドレス</td>
                        <td><%= @customer.email %></td>
                    </tr>
                    <tr>
                        <td>会員ステータス</td>
                        <td><% if @customer.is_deleted == false %>
                            有効
                            <% else %>
                            退会
                            <% end %>
                        </td>
                    </tr>
                </tbody>
            </table>
            <%= link_to edit_admin_customer_path(@customer.id), class:"btn btn-success" do %>
            編集する
            <% end %>
            <%= link_to restaurants_path, class:"btn btn-primary" do %>
            店舗投稿履歴一覧を見る
            <% end %>
        </div>
    </div>
</div>