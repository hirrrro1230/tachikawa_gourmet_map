<div class="container">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <h3>会員一覧</h3>
            <table class="table table-striped">
                <th>会員ID</th>
                <th>ユーザ名</th>
                <th>メールアドレス</th>
                <th>ステータス</th>
                <% @customers.each do |customer| %>
                    <tr>
                    <td><%= customer.id %></td>
                    <td><%= link_to admin_customer_path(customer.id) do %>
                        <%= customer.name %>
                        <% end %></td>
                    <td><%= customer.email %></td>
                    <td><% if customer.is_deleted == false %>
                    有効
                    <% else %>
                    退会
                    <% end %></td>
                    </tr>
                <% end %>
            </table>
        </div>
    </div>
</div>