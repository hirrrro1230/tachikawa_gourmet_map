<div class="container">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <h3>店舗新規登録</h3>
            <%= form_with model: @restaurant, url: admin_restaurants_new_path do |f| %>
              <p>店舗画像</p>
                <%= f.file_field :image, accept: "image/*" %>
              <p>店舗名</p>
                <%= f.text_field :name, value: params[:name] %>
              <p>店舗住所</p>
                <%= f.text_area :address, value: params[:address] %>
              <p>ジャンル</p>
                <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %>
              <p>営業時間</p>
                <%= f.text_field :opening_hour %>
              <%= f.select :is_draft, [['下書き保存',true],['新規登録',false]], { include_blank: false, selected: 0 } %>
              <%= f.submit '保存', class: "btn btn-outline-secondary" %>
            <% end %>
        </div>
    </div>
</div>