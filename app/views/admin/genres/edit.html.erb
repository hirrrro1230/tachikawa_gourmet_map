<div class="container">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <h3>ジャンル編集</h3>
            <%= form_with model: @genre, url: admin_genre_path(@genre.id), method: :patch do |f| %>
                <p>ジャンル名
                <%= f.text_field :name %>
                <%= f.submit '変更を保存',  class: "btn btn-success" %>
                </p>
            <% end %>
        </div>
    </div>
</div>