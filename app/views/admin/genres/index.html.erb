<div class="container">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
          <h3>ジャンル一覧・追加</h3>
          <%= form_with model: Genre.new, url: admin_genres_path do |f| %>
              <p>ジャンル名
              <%= f.text_field :name %>
              <%= f.submit '新規登録',  class: "btn btn-success" %>
              </p>
          <% end %>
          <table class="table table-striped">
              <th>ジャンル</th>
              <th></th>
              <th></th>
              <% @genres.each do |genre| %>
                  <tr>
                  <td><%= genre.name %></td>
                  <td>
                      <%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %>
                      <%= link_to "削除する", admin_genre_path(genre.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger"  %>
                  </td>
                  </tr>
              <% end %>
          </table>
        </div>
    </div>
</div>